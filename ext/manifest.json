{
  "name": "Video Pauser - now yourLink",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension was created to pause videos with one click",
  "icons": {
    "16": "icons/video-pauser-icon.png",
    "48": "icons/video-pauser-icon.png",
    "128": "icons/video-pauser-icon.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/video-pauser-icon.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "contentSettings", "tabs", "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}